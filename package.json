{
  "name": "codeql-sarif-security-standard-annotator",
  "version": "v1.1.0",
  "private": true,
  "description": "Compare a CodeQL SARIF results file to a security standard CWE list and annotate the SARIF rules with a tag to highlight results applicable to the security standard",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "release": "release-it",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advanced-security/codeql-sarif-security-standard-annotator"
  },
  "keywords": [
    "actions",
    "sarif",
    "cwe",
    "codeql",
    "github"
  ],
  "author": "GitHub, Inc",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@xmldom/xmldom": "^0.8.11",
    "jsonpath-plus": "^10.3.0",
    "xpath": "^0.0.34",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.12.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.0",
    "release-it": "^19.2.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
